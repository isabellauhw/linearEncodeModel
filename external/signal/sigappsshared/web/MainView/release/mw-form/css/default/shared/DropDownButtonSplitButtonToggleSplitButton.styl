.mwWidget.mwDefaultVisualFamily.mwDropDownButton.mwIconAlignmentLeft.mwArrowModeInline .mwSeparatorNode,
.mwWidget.mwDefaultVisualFamily.mwSplitButton.mwIconAlignmentLeft.mwArrowModeInline .mwSeparatorNode,
.mwWidget.mwDefaultVisualFamily.mwToggleSplitButton.mwIconAlignmentLeft.mwArrowModeInline .mwSeparatorNode {
