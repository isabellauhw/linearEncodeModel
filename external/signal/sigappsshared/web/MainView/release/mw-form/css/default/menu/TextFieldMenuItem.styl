@import "variables";

.mwDefaultVisualFamily.mwWidget.mwTextFieldMenuItem.mwSharedMenuItem:focus {
  background: none; /* No Highlight color  on entire TextField MenuItem*/
}

.mwDefaultVisualFamily.mwWidget.mwTextFieldMenuItemFocused.mwSharedMenuItem .mwTextField:not(.mwTextFieldDisabled),
.mwDefaultVisualFamily.mwWidget.mwTextFieldMenuItemFocused.mwSharedMenuItem .mwTextField:not(.mwTextFieldDisabled) .mwInputNode {
  background: $color-lightgray3; /* Highlight color only on TextField */
}

.mwDefaultVisualFamily.mwWidget.mwTextFieldMenuItem.mwSharedMenuItem .mwTextFieldWrapperNode {
    flex-grow: 1;
}